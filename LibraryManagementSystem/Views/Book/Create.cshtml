@{
    @model LibraryManagementSystem.ViewModels.BookViewModel
    ViewData["Title"] = "Add New Book";
}

<h2 class="text-center p-4">Add New Book</h2>

<div class="create-book-container pb-3">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <form asp-action="Create" method="post" class="card p-4 shadow">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" type="text" placeholder="Enter book title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Genre" class="form-label">Genre</label>
                    <input asp-for="Genre" class="form-control" type="text" placeholder="Enter genre"/>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PublishDate" class="form-label">Publish Date</label>
                    <input asp-for="PublishDate" class="form-control" type="date"/>
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ISBN" class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" type="text" placeholder="Enter ISBN"/>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CopiesAvailable" class="form-label">Copies Available</label>
                    <input asp-for="CopiesAvailable" class="form-control" type="number"
                           placeholder="Enter number of copies"/>
                    <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="AuthorId" class="form-label">Author</label>
                    <select asp-for="AuthorId" asp-items="ViewBag.Authors" class="form-control">
                        <option value="">Select an Author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

