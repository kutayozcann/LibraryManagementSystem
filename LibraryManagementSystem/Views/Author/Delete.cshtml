@{
    @model LibraryManagementSystem.ViewModels.AuthorViewModel
    ViewData["Title"] = "Delete Author";
}

<div class="delete-container">
    <h2>Are you sure you want to delete this author?</h2>
    <p>You are about to delete the author named <strong>"@Model.FullName"</strong> ?. This actions can not be undone.
    </p>

    <form method="post">
        <input type="hidden" value="@Model.Id"/>
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="fas fa-trash-alt"></i>Delete
        </button>
    </form>
    <button asp-action="List" class="btn btn-secondary btn-lg">
        <i class="fas fa-times"></i>Cancel
    </button>
</div>
