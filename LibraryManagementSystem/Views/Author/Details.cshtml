@{
    @model LibraryManagementSystem.ViewModels.AuthorViewModel
    ViewData["Title"] = "Author Details";
}

<div class="container-sm mt-5 pb-4">
    <div class="card shadow w-50 mx-auto">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center">Details of Author</h2>
        </div>
        <div class="card-body p-3">
            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>First Name:</strong> @Model.FirstName</p>
                    <p><strong>Last Name:</strong> @Model.LastName</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth?.ToShortDateString()</p>
                </div>
            </div>
            <div class="card-header bg-info text-white">
                <h3 class="text-center">Books by @Model.FullName</h3>
            </div>
            @if (Model.Books.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>Title</th>
                            <th>Genre</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var book in Model.Books)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Genre</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No books found for this author.
                </div>
            }
        </div>
        <div class="card-footer btn-container p-3 text-center justify-content-between"
             style="background-color:lightyellow">
            <a asp-controller="Author" asp-action="List" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-controller="Author" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>
    </div>
</div>