@{
    @model List<LibraryManagementSystem.ViewModels.AuthorViewModel>
    ViewData["Title"] = "Authors List";
}

<div class="author-list-container">
    <h2>Authors List</h2>
    <table class="author-table table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth?.ToShortDateString()</td>
                <td>
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn btn-primary">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/Author/Create" class="btn btn-primary">Add New Author</a>
</div>